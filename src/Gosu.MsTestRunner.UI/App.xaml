<Application x:Class="Gosu.MsTestRunner.UI.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:converters="clr-namespace:Gosu.MsTestRunner.UI.Converters"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
        <converters:ReducedNumericValueConverter x:Key="ReducedNumericValueConverter"/>

        <BitmapImage x:Key="SuccessIcon" UriSource="/Icons/success.png" />
        <BitmapImage x:Key="FailIcon" UriSource="/Icons/fail.png" />
        <BitmapImage x:Key="IgnoredIcon" UriSource="/Icons/ignored.png" />
        <BitmapImage x:Key="WarningIcon" UriSource="/Icons/warning.png" />
        <BitmapImage x:Key="PlayIcon" UriSource="/Icons/arrow-right.png" />
        <BitmapImage x:Key="PlayParallelIcon" UriSource="/Icons/arrow-right-double.png" />
    </Application.Resources>
</Application>
